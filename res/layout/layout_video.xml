<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_layout_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	
	<ImageView
		android:layout_width="46dp"
		android:layout_height="46dp"   
		android:layout_marginTop="52dp"
		android:layout_marginLeft="172dp"
		android:src="@drawable/video"
	/>
    <TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"   
		android:layout_marginTop="60dp"
		android:layout_marginLeft="230dp"
		android:text="@string/str_video"
		android:textSize="30dp"
	/>
	<TextView
		android:id="@+id/tx_video_allcount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_alignParentRight="true"
		android:layout_marginTop="80dp"
		android:layout_marginRight="192dp"
		android:textSize="20dp"
	/>	
	<TextView
		android:id="@+id/tx_video_count"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_marginTop="80dp"
		android:layout_toLeftOf="@+id/tx_video_allcount"
		android:textSize="20dp"
		android:textColor="#3495D9" 
	/>
    <com.droidlogic.mboxlauncher.MyScrollView
	    android:layout_width="976dp"
        android:layout_height="460dp"
        android:layout_marginLeft="170dp"
	    android:layout_marginTop="116dp" 
	    android:descendantFocusability="afterDescendants">

		<com.droidlogic.mboxlauncher.MyGridLayout
			android:id="@+id/gv_shortcut_video"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:columnCount="6"
		    android:rowCount="20"
		    android:layout_centerHorizontal="true" 
	    />
    </com.droidlogic.mboxlauncher.MyScrollView>
    
    <ImageView
		android:layout_width="262dp"
		android:layout_height="52dp"   
		android:layout_marginTop="638dp"
		android:layout_centerHorizontal="true"
		android:src="@drawable/prompt_video"
	/>
</RelativeLayout>

